{
  "manifest_version": 3,
  "name": "DuckRate",
  "version": "1.0.0",
  "description": "Shows RateMyProfessor ratings on UO DuckWeb course catalog",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.ratemyprofessors.com/*",
    "https://*.ratemyprofessors.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://duckweb.uoregon.edu/*",
        "*://*.uoregon.edu/*",
        "*://catalog.uoregon.edu/courses/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}